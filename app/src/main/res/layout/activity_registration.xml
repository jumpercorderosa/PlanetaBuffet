<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bg_buffet_3"
    tools:context="com.gmail.jumpercorderosa.planetabuffet.activity.RegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#FFF"
            android:text="@string/about"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="100dp"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:text="@string/you"
            android:shadowColor="#FFF"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#FFF"/>
    </LinearLayout>

    <!--EditText
        android:id="@+id/etName"
        android:layout_width="317dp"
        android:layout_height="52dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/input_email"
        android:padding="60dp"
        android:layout_marginBottom="5dp"
        android:hint="name" /-->

    <EditText
        android:id="@+id/etName"
        android:layout_marginTop="0dp"
        android:layout_width="317dp"
        android:layout_height="52dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/input_nome"
        android:hint="@string/name"
        android:layout_marginBottom="5dp"
        android:paddingLeft="60dp"
        android:nextFocusDown="@+id/etLogin"
        android:inputType="text"
        android:maxLines="1"
        />

    <EditText
        android:id="@+id/etLogin"
        android:layout_width="317dp"
        android:layout_height="52dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/input_login"
        android:hint="@string/user"
        android:layout_marginBottom="5dp"
        android:paddingLeft="60dp"
        android:nextFocusDown="@+id/etPassword"
        android:inputType="text"
        android:maxLines="1"/>

    <EditText
        android:id="@+id/etPassword"
        android:inputType="textPassword"
        android:layout_width="317dp"
        android:layout_height="52dp"
        android:paddingLeft="60dp"
        android:hint="@string/password"
        android:background="@drawable/input_password"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="25dp"
        android:maxLines="1"/>

    <!--EditText
        android:id="@+id/etMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mail"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/etPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone number"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="phone"/>

    <EditText
        android:id="@+id/etEventDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Event date"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="date"/-->

    <Button
        android:id="@+id/btnOK"
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:text="@string/ok"
        android:textSize="20dp"
        android:textColor="#FFF"
        android:background="@color/colorPrimary"/>

</LinearLayout>
