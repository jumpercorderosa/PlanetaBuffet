<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_about"
    android:gravity="center"
    tools:context="com.gmail.jumpercorderosa.planetabuffet.fragments.AboutFragment">


    <ImageView
        android:layout_width="188dp"
        android:layout_height="181dp"
        android:src="@drawable/ic_launcher"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Versão 1.0"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Developed by Danielle Pereira"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Criado as pressas no ano de 2017 por uma aluna completamente perdida, este app deu tão certo que hoje é utilizado por todas as redes de buffet do Brasil! #tomara"
        android:layout_marginTop="10dp"
        android:textAlignment="center"/>

</LinearLayout>
